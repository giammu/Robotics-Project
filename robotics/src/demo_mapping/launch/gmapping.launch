<launch> <!-- Aggiungiamo queste impostazioni aggiuntive per ridurre la dimensione della mappa--> 

  <node pkg="gmapping" type="slam_gmapping" name="gmapping" output="screen">
    <remap from="scan" to="base_scan" /> <!--abbiamo il remapping da scan a base_scan, perchè base_scan è il topic pubblicato dalla simulation -->
    <param name="xmax" value="5"/>    <!--questi 4 valori servono per non dare i valori di default a gmapping perchè sono troppo grandi-->
    <param name="ymax" value="5"/>
    <param name="xmin" value="-5"/>
    <param name="ymin" value="-5"/>
    <param name="delta" value="0.05"/>
  </node>

</launch>
